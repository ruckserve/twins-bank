<h1>Enter PIN</h1>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <% (1..12).each_slice(3) do |slice| %>
      <div class="row">
      <% slice.each do |n| %>
        <div class="btn-group">
          <button class="btn btn-block btn-lg btn-secondary pin-pad">
            <%= pin_helper(n) %>
          </button>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
